@using HiringOperations.Models
@model forget



@{
    ViewData["Title"] = "Reset";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!DOCTYPE html>



<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Revamp/start/vendor/bootstrap/css/bootstrap.min.css" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Revamp/start/fonts/font-awesome-4.7.0/css/font-awesome.min.css" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Revamp/start/fonts/Linearicons-Free-v1.0.0/icon-font.min.css" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Revamp/start/css/util.css" />
    <link rel="stylesheet" type="text/css" href="Revamp/start/css/main.css" />

    <title>Forget Password | Geeks - Bootstrap 5 Template</title>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
</head>
<!-- Page Content -->



<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-gap"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <div style="border:solid;border-block-color:green">
                                    <h3 class="text-center" style="color:green">Forgot PASSWORD</h3>

                                    <div class="panel-body" id="register-form" role="form" autocomplete="off" class="form" method="post">



                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon" style="background-color:green"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                @Html.TextBoxFor(model=> model.EmailID,new{@class="form-control",placeholder="ENTER EMAILID",name="email"})

                                            </div>
                                            @Html.ValidationMessageFor(model=> model.EmailID,"",new{@class="text-danger"})
                                        </div>
                                       
                                        <div class="form-group">
                                            <input class="btn btn-lg btn-primary btn-block" value="RESET" type="submit" style="background-color:green">

                                        </div>

                                        <input type="hidden" class="hide" name="token" id="token" value="">


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>



</html>